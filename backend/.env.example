# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=webhost_manager
DB_USER=postgres
DB_PASSWORD=your_password
DB_DIALECT=postgres

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRY=24h

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com

# Admin Configuration
ADMIN_EMAIL=admin@example.com

# Backup Configuration
BACKUP_DIR=./backups
MAX_BACKUPS=7

# Monitoring Configuration
MONITORING_INTERVAL=300000 # 5 minutes in milliseconds
SSL_CHECK_INTERVAL=86400000 # 24 hours in milliseconds
UPTIME_CHECK_TIMEOUT=30000 # 30 seconds in milliseconds
ALERT_THRESHOLD_RESPONSE_TIME=5000 # 5 seconds in milliseconds 